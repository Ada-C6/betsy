<img src= "<%= @product.photo %>" >
<h4><%= @product.name %></h4>
<p>Description: <%= @product.description %></p>
<p>Price: $<%= @product.price %></p>
<p>Stock: <%= @product.stock %></p>
<p>Sold By: <%= @product.merchant.name %></p>

<h3>Reviews</h3>
<% @reviews.each do |review|%>
  <p>Rating: <%= review.rating %></p>
  <p><%= review.feedback %></p>
<% end %>
