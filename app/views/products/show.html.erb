<p><%= flash[:notice] %></p>

<%= image_tag @product.photo, size: "300", alt: @product.name %>

<div id="description">

  <h3><%= @product.name %></h3>
  <p>Sold By: </p>
  <p>Description: <%= @product.description %></p>
  <p>Price: $<%= @product.price %></p>
  <p>Stock: <%= @product.stock %></p>
  <p>Overall Rating: </p>

  <% if session[:order] %>
    <%= link_to("Add to Cart", orders_update_path(@product.id)) %>
  <% else %>
    <%= link_to("Add to Cart", orders_create_path(@product.id)) %>
  <% end %>

  <p><%= link_to "See my Cart", carts_index_path %></p>

</div>

<h3>Reviews</h3>
<% @reviews.each do |review|%>
  <div id="review">
  <p>Rating:
    <% review.rating.times do %>
      <%= image_tag("rating.png", :size => "20", :alt => "rating unicorn")%>
    <% end %>
  </p>
  <p><%= review.feedback %></p>
  </div>
<% end %>

<%= link_to("Add a Review!", reviews_new_path) %>
