<div class = "basic">

  <h2> <%= @product.name %> </h2>

  <%= image_tag(@product.photo_url, :class => 'photo') %>

  <p><%= @product.description %></p>
  <p>Price: $<%= @product.price %></p>
  <p>In-stock: <%= @product.inventory %></p>
  <p>Category: <%= @product.category %></p>
  <p>Seller: <%= link_to "#{@seller.first_name} #{@seller.last_name}", show_seller_products_path %></p>
  <p>Average rating: <%= @product.average_rating %></p>

  <p>Review:
    <% @reviews.each do |review| %></p>
      <p><%= review.description %></p>
    <% end %>

  <%=button_to("Add", add_orders_path(@product.id), method: :post)%>

</div>
