<p><%= flash[:notice] %></p>

<%= image_tag @product.photo, size: "300", alt: @product.name %>

<div id="description">

  <h3><%= @product.name %></h3>
  <p>Sold By: <%= @product.merchant.displayname %> </p>
  <p>Description: <%= @product.description %></p>
  <p>Price: $<%= @product.price/100.0 %></p>
  <p>Stock: <%= @product.stock %></p>
  <p>Overall Rating: </p>

  <% if session[:order] && Order.find(session[:order]).has_product(@product.id) %>
    <%= form_for Orderitem.find_by(product: @product), url: orderitems_update_path(Orderitem.find_by(product: @product)), method: :patch do |f| %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to cart" %>
    <% end %>
  <% else %>
    <%= form_for Orderitem.new(quantity: 1), url: orderitems_create_path, method: :post do |f| %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to cart" %>
    <% end %>
  <% end %>

  <p><%= link_to "See my Cart", carts_index_path %></p>

</div>

<h3>Reviews</h3>
<% @reviews.each do |review|%>
  <div id="review">
  <p>Rating:
    <% review.rating.times do %>
      <%= image_tag("rating.png", :size => "20", :alt => "rating unicorn")%>
    <% end %>
  </p>
  <p><%= review.feedback %></p>
  </div>
<% end %>

<%= link_to("Add a Review!", reviews_new_path) %>
