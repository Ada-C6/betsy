<section>
  <h2>Errors</h2>
  <ul>
    <% @product.errors.each do |field, problem| %>
      <li><strong><%= field %></strong><%= problem %></li>
    <% end %>
  </ul>
</section>

<h1>Add A New Product</h1>

<%= form_for @product, url:merchant_products_path(@merchant), method: :post, class: "form" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%=f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :stock %>
  <%= f.text_field :stock %>
  <%= f.submit "Add Product" %>
<% end %>
