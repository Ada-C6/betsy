<h1 class="page-header product-name"> Products for <%= @merchant.name %> </h1>

<div class="row product-grid" data-equalizer data-equalize-on="medium" id="test-eq">
<% @products.each do |product| %>
  <article class="column small-6 medium-4 large-3 <%= "end" if product == @products.last%>">
    <div class="callout" data-equalizer-watch>
      <div class="product-name-div">
        <p class="product-name">  <%= link_to product.name, merchant_product_path(@merchant.id, product.id) %>  </p>
      </div>
      <%= image_tag(product.image, size: "200x300", alt: "Photo of #{product.name}.", class: "product-photo") %>
    </div>
  </article>
<% end %>
</div>


<% if current_merchant != nil %>
  <p>  <%= link_to "Add New Product", new_merchant_product_path(@merchant.id) %></p>
<% end %>
