

<%= "#{@merchant.displayname}" %>

<h3>Current Product List:</h3>
<% @merchant.products.each do |product| %>
<div>
  <p>
    <%= image_tag product.photo, alt: product.name %>
  </p>
</div>
<div>
    <p><%= link_to product.name, products_show_path(product.id) %></p>
</div>
<div>
  <% if product.retired == false %>
    <%= button_to "Inactivate", products_retire_path(product.id), method: :patch %>
  <% else %>
    <%= button_to "Activate", products_retire_path(product.id), method: :patch %>
  <% end %>
</div>
<div>
  <%= link_to "Edit", product_edit_path(product.id) %>
</div>

<% end %>


<%= button_to "Add Product", products_new_url %>
