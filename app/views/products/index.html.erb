<div class="basic">
  <div class="row small-up-1 medium-up-2 large-up-3">

    <% if @products.empty? %>
      <%=image_tag "count_zero.jpg"  %>
    <% else %>
      <% @products.each do |product| %>
        <p><%= link_to image_tag(product.photo_url), show_products_path(product.id), { :class => "product_photo" } %></p>
        <p><%= link_to product.name, show_products_path(product.id) %></p>
        <p><%= product.price %></p>
      <% end %>
    <% end %>
    
  </div>
</div>
