<h2 class="underline">Product management</h2>

<% if flash[:error] %>
    <p><%= flash[:error] %></p>
<% end %>

<ul class="row small-up-2 large-up-4">
<% @products.each do |product| %>
    <li class="column">
        <section>
            <h2><%= capitalize_each_word(product.name) %></h3>
            <h3><%= link_to "EDIT", edit_product_path(product) %></h3>
            <h3>CATEGORIZE</h3>
            <h3><% if product.active %>
              <%= link_to "RETIRE PRODUCT", retire_product_path(product), remote: true, method: "patch", class: "warning button" %>
              <% else %>
              <%= link_to "ACTIVATE PRODUCT", retire_product_path(product), remote: true, method: "patch", class: "warning button" %>
              <% end %></h3>
        </section>
    </li>
<%end%>
</ul>
