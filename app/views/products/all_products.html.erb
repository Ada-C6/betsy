<h1 class="page-header product-name"> See All NotYetsy Products </h1>

<div class="row product-grid" data-equalizer data-equalize-on="medium" id="test-eq">
  <% @products.each do |product| %>
    <article class="column small-6 medium-4 large-3 <%= "end" if product == @products.last%>">
      <div class="callout" data-equalizer-watch>
        <p class="product-name">  <%= link_to product.name, merchant_product_path(product.merchant_id, product.id) %>  </p>
        <p>  <%= image_tag(product.image, size: "200x300", alt: "Photo of #{product.name}.") %>  </p>
      </div>
    </article>
  <% end %>
</div>
