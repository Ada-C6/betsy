<h1>Order Confirmation</h1>

<h3>Order Items:</h3>
<% @items.each do |item| %>
  <% product = item.find_product %>
  <p><%= link_to "#{ product.name }", product_path(product.id) %> <%#THIS ROUTE NEEDS TO BE CHANGED %>
  <%= "quantity: #{ item.quantity }" %>
  <%= "subtotal: #{ product.price * item.quantity }" %></p>
<% end %>

<p>
  Total: <%= "#{ @total }" %>
</p>

<p>Order placed at <%= "#{ @cart.updated_at }" %></p>

<p>Status: <%= "#{ @cart.status }" %></p>
