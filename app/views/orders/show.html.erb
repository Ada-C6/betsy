<h1>Cart</h1>

<% @items.each do |item| %>
  <%= "Product: #{ item.find_product.name }" %> <%# add a link here %>
  <%= "Subtotal: #{ item.find_product.price * item.quantity }" %>
  <%# link_to "Change quantity", something_path, method: :patch %>
  <%= form_for item, :url => order_item_path(item) do |f| %>
      <%= f.label :quantity, "Change quantity"%>
      <%= f.number_field :quantity, :value => item.quantity %>
      <%= submit_tag "Update" %>
  <% end %>

  <%= link_to "Remove this product", order_item_path(item.id), method: :delete %>
  <% end %>

  <%= link_to "Purchase this order", orders_edit_path, method: :get %>
