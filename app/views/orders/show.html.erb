<TABLE>

  <TR>
    <TH>Product</TH>
    <TH>Unit price</TH>
    <TH>Quantity</TH>
    <TH>Total</TH>
  </TR>

  <% @orderitems.each do |orderitem| %>
  <TR>
    <TD><%= link_to orderitem.product.name, products_show_path(orderitem.product.id) %></TD>
    <TD><%= "$#{orderitem.price/100.00}" %></TD>
    <TD><%= orderitem.quantity %></TD>
    <TD><%= "$#{orderitem.total/100.00}" %></TD>
  </TR>
  <% end %>

  <TR>
  <TD></TD>
  <TD></tabindex="">
  <TD></TD>
  <TD><%= "$#{@orderitems.totals/100.0}"%></TD>
  </TR>

</TABLE>


<p>Order Status: <%= @order.status %>.</p>
<p>Order was placed at: <%= @order.placed_at %>.</p>
