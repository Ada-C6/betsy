<h2>Checkout</h2>
<%= form_for @order do  |f| %>
<%= f.label :email%>
<%= f.text_field :email %>
<%= f.label :address %>
<%= f.text_field :address %>
<%= f.label "Name on the Credit Card" %>
<%= f.text_field :cc_name %>
<%= f.label "Credit Card Number" %>
<%= f.text_field :cc_number %>
<%= f.label "Expiration Year" %>
<%= select_tag :cc_exp_year, options_for_select(years) %>
<%= f.label "Expiration Month" %>
<%= select_tag :cc_exp_month, options_for_select(months) %>
<%= f.label "Zip Code" %>
<%= f.text_field :billing_zip %>
<%= f.hidden_field :date_purchased, :value => Time.now %>
<%= f.hidden_field :total, :value => @total %>

<%= f.submit%>
<% end %>
