<% if @review.errors.any? %>
  <ul class="errors">
    <% @review.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section class="review-form">
  <%= form_for @review, url: product_path(@review.product_id) do |f| %>
    <%= f.label "Rating" %>
    <%= f.select(:rating, options_for_select(1..5)) %>

    <%= f.hidden_field :product_id, value: @review.product_id %>

    <%= f.label "Description" %>
    <%= f.text_area :description %>

    <%= f.submit %>
  <% end %>
</section>
