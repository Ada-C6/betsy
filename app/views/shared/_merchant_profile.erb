


<%= form_for @merchant, url: merchant_update_path do |f| %>

  <%= f.label "Store Name" %>
  <%= f.text_field :displayname, :place_holder => "Your Store Name" %>

  <%= f.label "Store Location" %>
  <%= f.text_field :location, :place_holder => "Store location" %>

  <%= f.label "Store Contact Number" %>
  <%= f.telephone_field :phone, :place_holder => "Contact Number" %>

  <%= f.label "Email" %>
  <%= f.email_field :email  %>

  <%= f.label "User Name" %>
  <%= f.text_field :username %>

  <%= f.submit "Save" %>
<% end %>
