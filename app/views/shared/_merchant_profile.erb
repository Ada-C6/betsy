# render shared header here

<h1>Sign-up as a Unicorns 'R' Us Merchant</h1>
<h3>Provide the following information: </h3>

<%= form_for @merchant do |f| %>

  <%= f.text_field :name, :place_holder => "Store Name"%>

  <%= f.text_field :location, :place_holder => "Store location" %>

  <%= f.text_field :phone, :place_holder => "Contact Number" %>

  <%= f.email_field :email, :place_holder => "#{@merchant.email}" %>

  <%= f.text_field :username, :place_holder => "#{@merchant.username}"%>

  <%= f.submit "Save", %>
<% end %>
