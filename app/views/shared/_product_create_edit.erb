
<h2> <% "#{@action} product" %> </h2>

<section>


<%= form_for @product, {:url => "create"} do |f| %>

  <%= f.label "Product Image URL" %>
  <%= f.text_field :photo %>

  <%= f.label "Product Name" %>
  <%= f.text_field :name %>

  <%= f.label "Description" %>
  <%= f.text_area :description %>

  <%= f.label "Price" %>
  <%= f.number_field :price %>

  <%= f.label "Quantity In Stock" %>
  <%= f.number_field :stock %>

  <%= f.select(:category_ids, options_for_select(category_options))  %>

  <%= f.submit "Save" %>


<% end %>

</section>
