<h1 class="category-header"><%= @category.name %></h1>

<section class="row small-up-1 medium-up-2 large-up-3">
  <% @products.each do |p| %>
    <section class="column">
      <% image = Product.find_photo_image(p) %>
      <%= link_to image_tag(image, alt: "#{ p.name }", class: "rounded-image"), product_path(p) %>
      <p class="product-description">Name: <%= link_to "#{ p.name }", product_path(p) %>, $<%= p.price %></p>
    </section>
  <% end %>
</section>
