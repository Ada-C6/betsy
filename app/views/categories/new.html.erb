<% if current_user %>
<h1 class="pg-title">
<%= "#{@merchant.displayname}" %>
</h1>

<h2 class="pg-title">Create a New Category</h2>

    <%= form_for Category do |f| %>
      <%= f.label "Category Name" %>
      <%= f.text_field :name %>
      <% f.submit %>
    <% end %>

<% else %>
<h2> You are not authorized to visit this page.  Please login as a merchant.</h2>

<% end %>
