<h1 class="page-header product-name"> Featured Products </h1>

<div class="orbit product-grid" role="region" aria-label="Featured Products" data-orbit>
  <ul class="orbit-container">
    <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
    <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
    <% @featured_products.each do |product| %>
      <li class="is-active orbit-slide">
        <div>
          <h3 class="text-center"> <%= link_to(product.name, merchant_product_path(product.merchant.id, product.id)) %> </h3>
          <h5 class="text-center"><%= link_to(image_tag(product.image, size: "200x275", alt: "Photo of #{product.name}"), merchant_product_path(product.merchant.id, product.id)) %></h5>
          <p class="text-center orbit-display"> Price: $<%= '%.2f' % (product.price/100.00) %> </p>
          <p class="text-center orbit-display"> Inventory: <%= product.inventory %> </p>
          <p class="text-center"> <%= product.rating == nil ? "Not Yet Rated!" : star_string(product.rating) %> </p>
        </div>
      </li>
    <% end %>
  </ul>
  <nav class="orbit-bullets">
    <button class="is-active" data-slide="0"><span class="show-for-sr">First slide details.</span><span class="show-for-sr">Current Slide</span></button>
    <button data-slide="1"><span class="show-for-sr">Second slide details.</span></button>
    <button data-slide="2"><span class="show-for-sr">Third slide details.</span></button>
    <button data-slide="3"><span class="show-for-sr">Fourth slide details.</span></button>
    <button data-slide="4"><span class="show-for-sr">Fifth slide details.</span></button>
    <button data-slide="5"><span class="show-for-sr">Sixth slide details.</span></button>
  </nav>
</div>
