<h4><%= product.name %></h4>

<%= form_for order_item do |f| %>
  <p><%= "Unit Price: $#{ sprintf('%.2f' % (product.price / 100.0)) }" %></p>
  <%= f.number_field :quantity, value: order_item.quantity.to_i, min: 1 %>
  <%= f.hidden_field :product_id, value: product.id %>

  <%= f.submit "Update Quantity", class: "btn btn-primary" %>
  <%= link_to "Remove item from cart", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
<% end %>
