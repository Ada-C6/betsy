<!DOCTYPE html>
<html>
<head>
  <title>Betsy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if @merchant %>
      <h1>Welcome, <%= @merchant.name %></h1>
      <ul>
        <li><%#= link_to("Log out", merchant_logout_path) %></li>
      </ul>
    <% else %>
      <ul>
        <li><%= link_to("log in via Github", "/auth/github") %></li>
      </ul>
    <% end %>

    <% if flash[:notice] %>
      <p class="flash-notice"> <%= flash[:notice] %></p>
    <% end %>

  </header>

  <h1><%= greeting %></h1>
<%= yield %>

</body>
</html>
