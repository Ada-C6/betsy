<!DOCTYPE html>
<html>
<head>
  <title>Betsy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="https://fonts.googleapis.com/css?family=Quando" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Didact+Gothic" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container">
    <header>
    <div class="top-bar">

      <h3>ROBITS</h3>
      <nav class="top-bar-left">
        <ul class="menu">
          <li> <%= link_to "Merchants", merchants_path  %> </li>
          <li> <%= link_to "Catergories", categories_path %> </li>
          <li> <%= link_to "Products", products_path %> </li>
        </ul>


      </nav>
      <nav class="top-bar-right">
        <ul class="menu">

        <% if session[:merchant_id] %>
          <li><%= link_to "Log out", sessions_path, method: :delete %></li>
          <li><%= link_to "Merchant Control", sessions_merchant_login_path, method: :get %></li>
        <% else %>
          <% if flash[:error] %>
            <%= flash[:error] %>
          <% end %>
        <li>  <%= link_to "Log In", "/auth/github", method: :get %></li>
          <li><%= link_to "Sign Up", "https://github.com/join?source=header-home", method: :get %></li>
        <% end %>
        </ul>
      </nav>
    </div>
    </header>
    <%= yield %>
  </div>
</body>
</html>
