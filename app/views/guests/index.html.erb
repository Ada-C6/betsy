<section class="row small-up-1 medium-up-2 large-up-3">
  <% number = (1..@product_count).to_a.shuffle %>
  <% 6.times do %>
    <% featured_image = @products[number.pop] %>
    <%= link_to featured_image.name, product_path(featured_image) %>

    <% image = Product.find_photo_image(featured_image) %>
    <%= link_to image_tag(image, alt: "#{ featured_image.name }"), product_path(featured_image) %>

  <% end %>
</section>
