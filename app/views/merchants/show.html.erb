<h1><%= @merchant.username %></h1>

<h2>My Products</h2>

<% @products.each do |product| %>
  <p><%= product.name %></p>
  <p>Description: <%= product.description %></p>
  <p>Stock: <%= product.stock %></p>
<% end %>

<%= button_to("New Category", new_merchant_category_path(@merchant.id), method: :get ) %>

<%= button_to("New Product",   new_merchant_product_path(@merchant.id), method: :get ) %>
