<h1 class="category-header">Welcome to your Dashboard, <%= "#{ @merchant.username }" %></h1>

<section class="row dashboard-buttons">
  <%= button_to "Add a Product", new_product_path, method: :get, class: "column small-4" %>

  <%= button_to "View My Products", merchant_products_path(@merchant), method: :get, class: "column small-4" %>

  <%= button_to "Add a Category", new_category_path, method: :get, class: "column small-4" %>
</section>

<section class="dashboard-orders-table">
  <table>
    <tr>
      <th>
        Order Number
      </th>
      <th>
        Products
      </th>
      <th>
        <ul class="vertical menu medium-horizontal" data-responsive-menu="accordion medium-dropdown">
          <li>
            Order Status
            <ul class="menu vertical">
              <li>
                <% Order.all.each do |o| %>
                  <%= link_to "#{ o.order_status }", order_path(o.id) %>
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </th>
    </tr>
    <tr>
      <td>
        Dynamic list of order number with ordered on: information
      </td>
      <td>
        Products in that order
      </td>
      <td>
        Order status generated by dropdown menu
      </td>
    </tr>
  </table>
</section>

<section class="dashboard-summary">
  <div class="row">
    <h3 class="category-header small-12 column">Summary</h3>
  </div>
  <div class="row">
    <section class="revenue-info small-6 column">
      <h3>Revenue</h3>
      <p>
        Total Revenue for Pending Orders:
      </p>
      <p>
        Total Revenue for Paid Orders:
      </p>
      <p>
        Total Revenue for Cancelled Orders:
      </p>
      <p>
        Total Revenue for Completed Orders:
      </p>
      <p>
        <strong>Total Net Revenue:</strong>
      </p>
    </section>
    <section class="order-info small-6 column">
      <h3>Orders</h3>
      <p>
        Total Pending Orders:
      </p>
      <p>
        Total Cancelled Orders:
      </p>
      <p>
        Total Paid Orders:
      </p>
      <p>
        Total Completed Orders:
      </p>
      <p>
        <strong>Total Orders:</strong>
      </p>
    </section>
  </div>
</section>
