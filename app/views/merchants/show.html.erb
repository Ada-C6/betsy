<h1><%= @merchant.username %></h1>

<% @products.each do |p| %>
  <p>Name: <%= link_to p.name, product_path %>, $<%= p.price %></p>
  <% image = Product.find_photo_image(p) %>
  <%= link_to image_tag(image, alt: "#{ p.name }"), product_path(p) %>
<% end %>

<% if current_user != nil && @merchant.id == current_user.id %>
  <p><%= link_to "Add a New Product", new_product_path %></p>
<% end %>
